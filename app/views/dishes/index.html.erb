<h1>Dishes</h1>

<table class="table table-striped">  
<thead class = 'thead-dark'>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Vendor Id</th>
      <th colspan= "1"></th-->
    </tr>
</thead>

<tbody>
  <% @dishes.each do |dish| %>
   <!-- %= render dish % -->
   <% if dish.vendor == current_vendor %>
   <tr>
    <td> <%= link_to dish.name, dish %></td>
    
      <!--td>< %= dish.name %></td -->
      <td><%= dish.category %></td>
      <td><%= dish.price %></td>
      <td><%= dish.vendor_id %></td>
    

      <td><%= button_to "Delete", dish, method: :delete, data: { turbo_confirm: 'Are you sure?'}, class: "btn btn-sml btn-outline-danger"  %></td>

    </tr>
   <%end %>
  <% end %>
</tbody>
</table>

<br>

